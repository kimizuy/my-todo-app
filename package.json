{
  "name": "my-todo-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "preview": "npm run build && vite preview",
    "deploy": "npm run build && wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check --write .",
    "format": "prettier --write .",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
    "check": "npm run lint && npm run format && npm run typecheck",
    "security-check": "bash scripts/security-check.sh",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply my-todo-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply my-todo-db --remote",
    "db:studio": "drizzle-kit studio",
    "cf-typegen": "wrangler types",
    "postinstall": "npm run cf-typegen"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
